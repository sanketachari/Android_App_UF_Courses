<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sanket.ufcourses.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/department"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Department"
            android:textSize="16dp"></TextView>

        <Spinner
            android:id="@+id/spinner1_Department"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/program"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:text="Program"
            android:textSize="16dp"></TextView>

        <Spinner
            android:id="@+id/spinner2_program"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:text="Semester"
            android:textSize="16dp"></TextView>

        <Spinner
            android:id="@+id/spinner3_sem"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/course_no"
            android:layout_width="120dp"
            android:layout_height="58dp"
            android:paddingRight="8dp"
            android:text="Course Number (Optional)"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/user_input"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="e.g COT5405"/>

    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="onSubmit"
        android:text="Submit" />
</LinearLayout>
